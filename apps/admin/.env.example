# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/madebuy
MONGODB_DB=madebuy

# Authentication (NextAuth.js)
# Generate NEXTAUTH_SECRET with: openssl rand -base64 32
NEXTAUTH_URL=https://admin.madebuy.com
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32

# R2 Storage (Cloudflare)
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=madebuy-media
R2_PUBLIC_URL=https://media.madebuy.com

# OpenAI (for AI captions and photo matching)
OPENAI_API_KEY=sk-your-openai-api-key

# Etsy Marketplace Integration
ETSY_CLIENT_ID=
ETSY_WEBHOOK_SECRET=

# Late.dev Social Publishing
LATE_API_KEY=your_late_api_key_here

# Optional: Pre-configured account IDs (users can also connect dynamically)
LATE_FACEBOOK_ACCOUNT_ID=
LATE_INSTAGRAM_ACCOUNT_ID=
LATE_TIKTOK_ACCOUNT_ID=
LATE_PINTEREST_ACCOUNT_ID=

# Email (Resend)
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=noreply@madebuy.com

# Cron Security (for scheduled publishing)
# Generate with: openssl rand -hex 32
CRON_SECRET=your_cron_secret_here

# Optional: Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
