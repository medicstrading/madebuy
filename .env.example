# MongoDB
MONGODB_URI=mongodb://localhost:27017/madebuy
MONGODB_DB=madebuy

# NextAuth (Admin)
NEXTAUTH_URL=http://localhost:3301
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Public URLs (NEXT_PUBLIC_* are baked in at build time)
NEXT_PUBLIC_WEB_URL=http://localhost:3301
NEXT_PUBLIC_ADMIN_URL=http://localhost:3300

# Stripe (Web)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Connect (for tenant payouts)
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_...

# Stripe Subscription Price IDs (configured in Stripe Dashboard)
STRIPE_PRICE_MAKER_MONTHLY=price_...
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_...
STRIPE_PRICE_STUDIO_MONTHLY=price_...

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=madebuy-media
R2_PUBLIC_URL=https://your-bucket.r2.dev

# Email (Resend)
RESEND_API_KEY=re_...
DEFAULT_FROM_EMAIL=orders@yourdomain.com
SHIPPING_FROM_EMAIL=shipping@yourdomain.com

# Email Unsubscribe Verification
# Generate with: openssl rand -hex 32
UNSUBSCRIBE_SECRET=

# Cloudflare Turnstile (CAPTCHA)
TURNSTILE_SECRET_KEY=

# OpenAI (for AI captions)
OPENAI_API_KEY=sk-...

# Instagram OAuth (optional)
INSTAGRAM_CLIENT_ID=your-client-id
INSTAGRAM_CLIENT_SECRET=your-client-secret

# Late API (for social media publishing)
LATE_API_KEY=your-late-api-key

# Cron Security (for scheduled publishing)
# Generate with: openssl rand -hex 32
CRON_SECRET=your_cron_secret_here

# eBay API (for marketplace integration)
EBAY_APP_ID=your-ebay-app-id
EBAY_CERT_ID=your-ebay-cert-id
EBAY_DEV_ID=your-ebay-dev-id
# Verification token for eBay account deletion webhook
# Generate with: openssl rand -hex 16
EBAY_DELETION_VERIFICATION_TOKEN=your_verification_token_here
# Must match exactly what you register with eBay
EBAY_DELETION_ENDPOINT_URL=https://madebuy.com.au/api/webhooks/ebay/account-deletion

# Marketplace Encryption (for OAuth tokens)
# Generate with: openssl rand -base64 32
MARKETPLACE_ENCRYPTION_KEY=your_base64_encoded_32_byte_key_here

# Manager App Impersonation
# Generate with: openssl rand -base64 32 (must differ from NEXTAUTH_SECRET)
IMPERSONATION_SECRET=

# PayPal (optional)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=
NEXT_PUBLIC_PAYPAL_CLIENT_ID=

# eBay Marketplace Integration
EBAY_CLIENT_ID=
EBAY_CLIENT_SECRET=
EBAY_ENVIRONMENT=sandbox
EBAY_REDIRECT_URI=
EBAY_FULFILLMENT_POLICY_ID=
EBAY_PAYMENT_POLICY_ID=
EBAY_RETURN_POLICY_ID=
EBAY_MERCHANT_LOCATION_KEY=

# Etsy Marketplace Integration
ETSY_CLIENT_ID=
ETSY_REDIRECT_URI=

# Development Options
USE_LOCAL_STORAGE=false
SEED_SECRET=
