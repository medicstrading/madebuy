{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true,
    "paths": {
      "@madebuy/shared": ["./packages/shared/src"],
      "@madebuy/shared/*": ["./packages/shared/src/*"],
      "@madebuy/db": ["./packages/db/src"],
      "@madebuy/db/*": ["./packages/db/src/*"],
      "@madebuy/storage": ["./packages/storage/src"],
      "@madebuy/social": ["./packages/social/src"]
    }
  },
  "exclude": ["node_modules", "archive"]
}
