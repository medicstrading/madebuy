{
  "version": "1.0.0",
  "created_at": "2026-01-08T11:15:43.212Z",
  "last_updated": "2026-01-08T11:15:43.212Z",
  "inherits_from": "global",
  "model_routing": {
    "enabled": true,
    "log_decisions": true,
    "log_level": "info",
    "allow_escalation": true,
    "allow_delegation": true,
    "respect_overrides": true,
    "force_overrides": {
      "security": "opus",
      "architecture": "opus",
      "deployment": "sonnet",
      "database_migration": "sonnet",
      "formatting": "haiku",
      "documentation": "haiku",
      "config": "haiku"
    },
    "cost_optimization": {
      "enabled": true,
      "prefer_lower_tier_when_possible": true,
      "escalation_budget_check": false
    },
    "fallback_behavior": {
      "on_routing_error": "use_default",
      "on_low_confidence": "escalate",
      "on_tier_unavailable": "use_next_higher"
    }
  },
  "escalation_rules": {
    "auto_escalate": [
      {
        "condition": "complexity_score >= 5",
        "to_tier": "opus",
        "reason": "High complexity task"
      },
      {
        "condition": "domain == 'security'",
        "to_tier": "opus",
        "reason": "Security-sensitive operation"
      },
      {
        "condition": "confidence < 0.5",
        "to_tier": "sonnet",
        "reason": "Low confidence in classification"
      },
      {
        "condition": "failed_attempts >= 2",
        "to_tier": "next_higher",
        "reason": "Multiple failed attempts"
      }
    ],
    "manual_escalation_allowed": true,
    "escalation_cooldown_seconds": 0
  },
  "delegation_rules": {
    "auto_delegate": [
      {
        "condition": "is_formatting && single_file",
        "to_tier": "haiku",
        "reason": "Simple formatting task"
      },
      {
        "condition": "is_documentation && !is_architecture",
        "to_tier": "haiku",
        "reason": "Documentation update"
      },
      {
        "condition": "is_config && single_file && !is_security",
        "to_tier": "haiku",
        "reason": "Simple config change"
      }
    ],
    "parallel_delegation_limit": 5,
    "delegation_timeout_seconds": 300
  },
  "project_specific": {},
  "tier_constraints": {
    "haiku": {
      "max_file_changes": 3,
      "max_lines_per_file": 50,
      "forbidden_patterns": [
        "auth",
        "password",
        "secret",
        "key"
      ],
      "requires_review": false
    },
    "sonnet": {
      "max_file_changes": 15,
      "max_lines_per_file": 500,
      "forbidden_patterns": [],
      "requires_review": false
    },
    "opus": {
      "max_file_changes": null,
      "max_lines_per_file": null,
      "forbidden_patterns": [],
      "requires_review": false
    }
  },
  "overrides": {}
}